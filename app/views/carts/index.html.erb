<% provide(:carts, 'active') %>
<% provide(:title, 'Carts') %>
<h1>Carts</h1>

<% if @carts.empty? %>
  <b>No carts in store</b>
<% else %>
  <table border="1">
    <tr>
      <th>cart id</th>
      <th>User</th>
      <th>good</th>
      <th>quantity</th>
      <th></th>
    </tr>

    <% @carts.each do |c| %>
      <% c.products_orders.each do |p| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.user.name if c.user %></td>
          <td><%= p.product.name if p.product %></td>
          <td><%= p.quantity %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
<% end %>

<h3><%= link_to 'back', products_path %></h3>
