<% provide(:title, 'Categories') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-5 col-md-5">

      <div class="page-header">
        <h1>Categories</h1>
      </div>
      <p>
        <%= button_to new_category_path, method: :get, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Add category
        <% end %>
      </p>

      <% if @categories.empty? %>
        <b>No categories in store</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="warning">
              <th>Id</th>
              <th>Category</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <% @categories.each do |i| %>
          
            <tbody>
              <tr class="info">
                <td><%= i.id %></td>
                <td><%= link_to i.category, category_path(i) %></td>
                <td><%= button_to 'Edit', edit_category_path(i),
                        method: :get, class: "btn btn-success btn-xs" %></td>
                <td><%= button_to 'Delete', category_path(i),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-danger btn-xs" %></td>
               </tr>
            </tbody>
          <% end %>

        </table>
      <% end %>

      <div id="paginate-centre">
        <%= will_paginate %>
      </div>

      <p>
        <%= button_to 'Back', admins_path, method: :get, class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>