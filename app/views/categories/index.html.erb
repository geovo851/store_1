<% provide(:title, 'Categories') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-5 col-md-5">

      <div class="page-header">
        <h1>Categories</h1>
      </div>
      <p>
        <%= button_to new_category_path, method: :get, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Add category
        <% end %>
      </p>

      <% if @categories.empty? %>
        <b>No categories in store</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="warning">
              <th>Id</th>
              <th>Category</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody id="categories">
            <%= render partial: "category", :collection => @categories, :as => :category %>
          </tbody>
        </table>
      </div>
      <div id="paginator", class="paginate-centre">
        <%= paginate @categories, :remote => true %>
      </div>
      <% end %>

      <p>
        <%= button_to 'Back', admins_path, method: :get, class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>
