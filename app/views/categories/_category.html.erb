<tr class="info">
  <td><%= category.id %></td>
  <td><%= link_to category.category, category_path(category) %></td>
  <td><%= button_to 'Edit', edit_category_path(category),
                     method: :get, class: "btn btn-success btn-xs" %></td>
  <td><%= button_to 'Delete', category_path(category),
                     method: :delete,
                     data: { confirm: 'Are you sure?' },
                     class: "btn btn-danger btn-xs" %></td>
</tr>
