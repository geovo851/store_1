<%= form_for @category, :html => { class: "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :category, size: 22, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4">
      <%= f.submit title_sumbit, class: "btn btn-primary btn-sm" %>
    </div>
  </div>

<% end %>

<div><%= button_to 'Back', categories_path, method: :get, class: "btn btn-default" %></div>
