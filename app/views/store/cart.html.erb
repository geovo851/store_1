<% provide(:title, 'Cart') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="page-header">
        <h1>Cart</h1>
      </div>

      <% if @cart.products_orders.empty? %>
        <b>Cart empty.</b>
      <% else %>

        <%= button_to 'Buy', edit_delivery_path(@cart), method: :get, 
                      class: "btn btn-success btn-md" %>
        
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
             <tr class="warning">
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sum</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @cart.products_orders.each do |p| %>

                <tr class="info">
                  <td><%= p.product.name if p.product %></td>
                  <td>
                    <%= text_field_tag :quantity, p.quantity, size: 5,
                        class: 'quantity', id: p.id %>
                  </td>
                  <td><%= p.price %></td>
                  <td><%= p.quantity * p.price %></td>
                  <td>
                    <%= button_to 'Delete from сart', products_order_path(p),
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: "btn btn-primary btn-xs" %>
                  </td>
                </tr>

              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>

      <p>Total sum: <%= @cart.total_sum %></p>
      
      <p>
        <%= button_to 'Back', root_path, method: :get, class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>
