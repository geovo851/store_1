<% total_sum = 0 %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="page-header">
        <h1>Cart <%= @order.id %></h1>
      </div>

      <% if @order.products_orders.empty? %>
        <b>Cart empty.</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
           <tr class="warning">
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Sum</th>
              <th></th>
            </tr>
          </thead>

          <% @order.products_orders.each do |p| %>
            <% total_sum += p.quantity * p.price %>
            <tbody>
              <tr class="info">
                <td><%= p.product.name if p.product %></td>
                <td><%= p.quantity %></td>
                <td><%= p.price %></td>
                <td><%= p.quantity * p.price %></td>
                <td>
                  <%= button_to 'Delete from сart', products_order_path(p),
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, 
                        class: "btn btn-primary btn-xs" %>
                </td>
              </tr>
            </tbody>
          <% end %>

        </table>
        </div>
      <% end %>

      <p>Total sum: <%= total_sum %></p>
      
      <p>
        <%= button_to 'Back', root_path, method: :get, class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>
