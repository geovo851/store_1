<% provide(:title, "Order") %>

<div class="container">
  <div class="row">

    <h2 class="centre">Order</h2>

      <div class="col-sm-offset-2">

        <%= form_for @cart, url: delivery_path(@cart), :html => { multipart: true, class: "form-horizontal" } do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label :delivary_adress, class: "col-sm-3 control-label" %>
            <div class="col-sm-4">
              <%= f.text_area :delivary_adress, cols: 33, rows: 1, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :payment, class: "col-sm-3 control-label" %>
            <div class="col-sm-4">
              <%= f.collection_select(:payment_id, @payments, 
                          :id, :type_of_paiment, {:prompt => 'Please select payment'}, class: "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
              <%= f.submit 'Buy', class: "btn btn-primary"%>
              <%= link_to 'Ğ¡ancel', root_path, class: "btn btn-default" %>
            </div>
          </div>
        <% end %>

    </div>

  </div>
</div>





















